<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.wijasyka.flashcards2.listActivity"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/cos"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/list_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickAddSetButton"
            android:text="dodaj nowy\n zestaw słówek" />
        <Button
            android:id="@+id/add_words"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickAddFromFile"
            android:text="dodaj słówka z pliku" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickDeleteButton"
            android:text="usuń zaznaczone\n zestawy" />


    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>

